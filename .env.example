# ===========================================
# Bark Bijou Backend - Environment Variables
# ===========================================
# Copy this file to .env and fill in the values

# Database Configuration
DB_NAME=bark_bijou
DB_PORT=5432
DB_URL=jdbc:postgresql://localhost:${DB_PORT}/${DB_NAME}
DB_USERNAME=default
DB_PASSWORD=your_secure_database_password

# JWT Configuration
# IMPORTANT: Use a strong random string (at least 256 bits / 32 characters)
# Generate with: openssl rand -base64 32
JWT_SECRET=your_256_bit_secret_key_here_change_this

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379

# Admin Configuration (for actuator endpoints)
ADMIN_PASSWORD=your_secure_admin_password

# Frontend URLs (for CORS)
FRONTEND_URL=http://localhost:3000,http://localhost:5173
