<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallnine.apiserver.dao.UserDao">

    <resultMap id="UserResultMap" type="com.smallnine.apiserver.entity.User">
        <id property="id" column="id" />
        <result property="role" column="role" />
        <result property="username" column="username" />
        <result property="realname" column="realname" />
        <result property="email" column="email" />
        <result property="password" column="password" />
        <result property="phone" column="phone" />
        <result property="gender" column="gender" />
        <result property="birthDate" column="birth_date" />
        <result property="vipLevelsId" column="vip_levels_id" />
        <result property="imageUrl" column="image_url" />
        <result property="createdAt" column="created_at" />
        <result property="emailValidated" column="email_validated" />
        <result property="googleUid" column="google_uid" />
        <result property="imageUpdatedAt" column="image_updated_at" />
        <result property="resetToken" column="reset_token" />
        <result property="resetTokenExpiry" column="reset_token_expiry" />
        <result property="resetTokenSecret" column="reset_token_secret" />
        <result property="googleName" column="google_name" />
        <result property="city" column="city" />
        <result property="address" column="address" />
        <result property="zip" column="zip" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <sql id="BaseColumns">
        id, role, username, email, password, realname, phone, gender,
        birth_date, vip_levels_id, image_url, email_validated,
        google_uid, google_name, city, address, zip,
        reset_token, reset_token_expiry, reset_token_secret,
        image_updated_at, created_at, updated_at
    </sql>

    <!-- 根據ID查詢用戶 -->
    <select id="findById" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE id = #{id}
    </select>

    <!-- 根據用戶名查詢用戶 -->
    <select id="findByUsername" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE username = #{username}
    </select>

    <!-- 根據信箱查詢用戶 -->
    <select id="findByEmail" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE email = #{email}
    </select>

    <!-- 根據用戶名或信箱查詢用戶 -->
    <select id="findByUsernameOrEmail" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE username = #{usernameOrEmail} OR email = #{usernameOrEmail}
    </select>

    <!-- 檢查用戶名是否存在 -->
    <select id="existsByUsername" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM member
        WHERE username = #{username}
    </select>

    <!-- 檢查信箱是否存在 -->
    <select id="existsByEmail" resultType="boolean">
        SELECT COUNT(*) > 0
        FROM member
        WHERE email = #{email}
    </select>

    <!-- 創建用戶 -->
    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member (
            role, username, email, password, realname, phone, gender,
            vip_levels_id, image_url, email_validated, reset_token, reset_token_expiry,
            created_at, updated_at
        ) VALUES (
            #{role}, #{username}, #{email}, #{password}, #{realname}, #{phone}, #{gender},
            #{vipLevelsId}, #{imageUrl}, #{emailValidated}, #{resetToken}, #{resetTokenExpiry},
            NOW(), NOW()
        )
    </insert>

    <!-- 更新用戶訊息 -->
    <update id="update">
        UPDATE member SET
            username = #{username},
            email = #{email},
            realname = #{realname},
            phone = #{phone},
            gender = #{gender},
            vip_levels_id = #{vipLevelsId},
            image_url = #{imageUrl},
            email_validated = #{emailValidated},
            reset_token = #{resetToken},
            reset_token_expiry = #{resetTokenExpiry},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根據ID刪除用戶 -->
    <delete id="deleteById">
        DELETE FROM member WHERE id = #{id}
    </delete>

    <!-- 查詢所有用戶（分頁） -->
    <select id="findAll" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        ORDER BY created_at DESC
        LIMIT #{limit} OFFSET #{offset}
    </select>

    <!-- 統計用戶總數 -->
    <select id="count" resultType="long">
        SELECT COUNT(*) FROM member
    </select>

    <!-- 更新用戶頭像 -->
    <update id="updateImageUrl">
        UPDATE member SET
            image_url = #{imageUrl},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 驗證用戶信箱 -->
    <update id="validateEmail">
        UPDATE member SET
            email_validated = true,
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根據重置令牌查詢用戶 -->
    <select id="findByResetToken" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE reset_token = #{resetToken}
    </select>

    <!-- 更新會員資料 -->
    <update id="updateProfile">
        UPDATE member SET
            username = #{username},
            realname = #{realname},
            email = #{email},
            phone = #{phone},
            gender = #{gender},
            birth_date = #{birthDate},
            image_url = #{imageUrl},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 更新密碼 -->
    <update id="updatePassword">
        UPDATE member SET
            password = #{password},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <!-- 根據 Google UID 查詢用戶 -->
    <select id="findByGoogleUid" resultMap="UserResultMap">
        SELECT <include refid="BaseColumns" />
        FROM member
        WHERE google_uid = #{googleUid}
    </select>

</mapper>