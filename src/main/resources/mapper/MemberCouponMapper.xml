<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallnine.apiserver.dao.MemberCouponDao">

    <resultMap id="MemberCouponResultMap" type="com.smallnine.apiserver.entity.MemberCoupon">
        <id property="id" column="id" />
        <result property="memberId" column="member_id" />
        <result property="couponId" column="coupon_id" />
        <result property="usedAt" column="used_at" />
        <result property="orderId" column="order_id" />
        <result property="acquiredAt" column="acquired_at" />
        <result property="source" column="source" />
    </resultMap>

    <select id="findByMemberId" resultMap="MemberCouponResultMap">
        SELECT * FROM member_coupons
        WHERE member_id = #{memberId}
        ORDER BY acquired_at DESC
    </select>

    <select id="findByMemberIdAndCouponId" resultMap="MemberCouponResultMap">
        SELECT * FROM member_coupons
        WHERE member_id = #{memberId} AND coupon_id = #{couponId}
        LIMIT 1
    </select>

    <select id="existsByMemberIdAndCouponId" resultType="boolean">
        SELECT COUNT(*) > 0 FROM member_coupons
        WHERE member_id = #{memberId} AND coupon_id = #{couponId}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO member_coupons (member_id, coupon_id, acquired_at, source)
        VALUES (#{memberId}, #{couponId}, NOW(), #{source})
    </insert>

</mapper>
