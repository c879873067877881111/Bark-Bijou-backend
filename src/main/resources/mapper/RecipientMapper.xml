<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.smallnine.apiserver.dao.RecipientDao">

    <resultMap id="RecipientResultMap" type="com.smallnine.apiserver.entity.Recipient">
        <id property="id" column="id" />
        <result property="memberId" column="member_id" />
        <result property="name" column="name" />
        <result property="phone" column="phone" />
        <result property="city" column="city" />
        <result property="town" column="town" />
        <result property="address" column="address" />
        <result property="isDefault" column="is_default" />
        <result property="createdAt" column="created_at" />
        <result property="updatedAt" column="updated_at" />
    </resultMap>

    <select id="findByMemberId" resultMap="RecipientResultMap">
        SELECT * FROM recipients
        WHERE member_id = #{memberId}
        ORDER BY is_default DESC, created_at DESC
    </select>

    <select id="findById" resultMap="RecipientResultMap">
        SELECT * FROM recipients WHERE id = #{id}
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO recipients (member_id, name, phone, city, town, address, is_default, created_at, updated_at)
        VALUES (#{memberId}, #{name}, #{phone}, #{city}, #{town}, #{address}, #{isDefault}, NOW(), NOW())
    </insert>

    <update id="update">
        UPDATE recipients SET
            name = #{name},
            phone = #{phone},
            city = #{city},
            town = #{town},
            address = #{address},
            is_default = #{isDefault},
            updated_at = NOW()
        WHERE id = #{id}
    </update>

    <delete id="deleteById">
        DELETE FROM recipients WHERE id = #{id}
    </delete>

    <update id="clearDefault">
        UPDATE recipients SET is_default = FALSE WHERE member_id = #{memberId}
    </update>

</mapper>
